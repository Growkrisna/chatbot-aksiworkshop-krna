{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "pythonVersion": "3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "app.py",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ]
}